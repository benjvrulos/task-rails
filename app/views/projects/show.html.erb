



<h1><%= @project.title %></h1>
<div class="mx-auto">
<span class="fw-bold fs-4">Listado de tareas:</span>
  <% if @project.tasks.length > 0  %>
    <div class="list-group mt-3">
      <% @project.tasks.each do |task| %>
          
          <%= link_to project_task_path(@project.id,task.id), class:"list-group-item list-group-item-action d-flex justify-content-between px-5 py-3" do%>          
            <%= task.title %>
            <span><%= task.completed ? 'Completada ✅': 'Pendiente ❌'%></span>
          <% end %>
      <% end %>
    </div>
 
  <% else %>
    <p>No existen tareas asociadas a este proyecto</p>
  <% end %>

  <div class="d-flex gap-5 justify-content-center mt-3">
    <%= link_to new_project_task_path(@project.id), class:"btn btn-secondary" do %>
      Agregar tarea <i class="fa-solid fa-plus"></i>
    <% end %>
    <%= link_to edit_project_path, class:"btn btn-warning text-white" do %>
      Editar proyecto <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
    <%= button_to  @project, method: :delete,class:"btn btn-danger" do %>
      Eliminar proyecto <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </div>
</div>

  
  <%= link_to "🔙 Volver", projects_path %>
