<%= form_with(model: task, url:project_tasks_path) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <% task.errors.each do |error| %>
        <p><%= error.full_message %></p>
      <% end %>
    </div>
  <% end %>


  <div class="row mb-4">
    <div class="col-sm-12 col-md-9 col-lg-4">
      <label class="form-label">Nombre de Tarea*</label>
      <%= form.text_field :title , class:"form-control"%>
    </div>
  </div>

  <div class="col-12 mb-4">
    <div class="form-check">
       <%= form.check_box :completed, class:"form-check-input" %>
        <label class="form-check-label">Completada</label>
    </div>
  </div>


  <div>
    <%= form.submit 'Crear tarea  ', class:"btn btn-secondary" %>
  </div>
<% end %>




  